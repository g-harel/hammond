{
  "name": "rickety",
  "version": "2.0.0",
  "description": "minimal typescript rpc framework",
  "author": "g-harel",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "trash '**/*.js' '**/*.js.map' '**/*.d.ts' '!node_modules/**/*'",
    "format": "prettier --list-different --write --ignore-path .gitignore '**/*.{js,ts}'"
  },
  "dependencies": {
    "@types/express": "^4.16.0"
  },
  "devDependencies": {
    "express": "^4.16.3",
    "prettier": "^1.14.2",
    "trash-cli": "^1.4.0",
    "typescript": "^3.0.3"
  },
  "homepage": "https://github.com/g-harel/rickety#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/g-harel/rickety"
  },
  "bugs": {
    "url": "https://github.com/g-harel/rickety/issues"
  },
  "keywords": [
    "typescript",
    "ts",
    "rpc"
  ],
  "prettier": {
    "tabWidth": 4,
    "printWidth": 85,
    "trailingComma": "all",
    "bracketSpacing": false,
    "arrowParens": "always"
  }
}
